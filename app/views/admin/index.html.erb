<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Name</th>
      <th scope="col">Nickname</th>
      <th scope="col">Birthday</th>
      <th scope="col"><%=link_to "+","/admin/new"%></th>
    </tr>
  </thead>
  <tbody>
  <% @user.each do |user| %>
  <tr>
      <td>
      <%= user.email%>
      </td>
      <td>
      <%= user.name%>
      </td>
      <td>
      <%= user.nickname%>
      </td>
      <td>
      <%= user.birthday%>
      </td>
      <td>
      <%=link_to "U","/admin/#{user.id}/edit"%>
      <%=link_to "D",{ controller: "admin", action: "destroy", id: user.id }, 
      data: { confirm: 'Are you sure?' }, 
      method: :delete%>
      </td>
      </tr>
      <% end %>
  </tbody>
</table>